{
  "name": "@code-dot-org/browser",
  "version": "0.0.1",
  "description": "A browser with Code.org-specific extensions, built with Electron",
  "license": "Apache-2.0",
  "author": "Brad Buchanan <brad@code.org>",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "install": "electron-rebuild",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "com.code-dot-org.browser",
    "dmg": {
      "contents": [
        {
          "x": 65,
          "y": 165
        },
        {
          "x": 265,
          "y": 165,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "serialport": "4.0.7"
  },
  "devDependencies": {
    "electron": "1.6.10",
    "electron-builder": "^18.3.5",
    "electron-rebuild": "^1.5.11"
  }
}
