{
  "name": "code-dot-org-browser",
  "version": "0.0.14",
  "description": "A browser with Code.org-specific extensions, built with Electron",
  "homepage": "https://code.org",
  "repository": "https://github.com/code-dot-org/browser",
  "license": "Apache-2.0",
  "author": {
    "name": "Brad Buchanan",
    "email": "brad@code.org"
  },
  "main": "src/main.js",
  "scripts": {
    "lint": "eslint . --fix",
    "pretest": "eslint .",
    "test": "mocha",
    "start": "NODE_ENV=${NODE_ENV:-development} electron .",
    "pack": "build --dir",
    "predist": "yarn test",
    "dist": "build"
  },
  "build": {
    "appId": "com.electron.code-dot-org-browser",
    "productName": "Maker Toolkit",
    "copyright": "Copyright Â© 2017 Code.org",
    "mac": {
      "category": "public.app-category.education"
    },
    "dmg": {
      "contents": [
        {
          "x": 65,
          "y": 165
        },
        {
          "x": 265,
          "y": 165,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "serialport": "6.0.4"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "electron": "^1.7.9",
    "electron-builder": "^19.43.3",
    "eslint": "^4.10.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^4.0.1"
  }
}
